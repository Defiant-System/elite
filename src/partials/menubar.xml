<MenuBar>
	<Menu name="Elite Redux">
		<Menu name="About Elite" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Elite" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
	
	<Menu for="bloom-options">
		<Menu name="Look At">
			<Menu name="Sun" click="look-at" arg="sun"/>
			<Menu type="divider"/>
			<Menu name="Mercury" click="look-at" arg="mercury"/>
			<Menu name="Venus" click="look-at" arg="venus"/>
			<Menu name="Earth" click="look-at" arg="earth"/>
			<Menu name="Mars" click="look-at" arg="mars"/>
			<Menu name="Jupiter" click="look-at" arg="jupiter"/>
			<Menu name="Saturn" click="look-at" arg="saturn"/>
			<Menu name="Uranus" click="look-at" arg="uranus"/>
			<Menu name="Neptune" click="look-at" arg="neptune"/>
			<Menu name="Pluto" click="look-at" arg="pluto"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Bloom">
			<Menu type="caption" name="Exposure:"/>
			<Menu type="slider" min="0" max="100" value="50" change="bloom-exposure"/>
			<Menu type="caption" name="Threshold:"/>
			<Menu type="slider" min="0" max="100" value="0" change="bloom-threshold"/>
			<Menu type="caption" name="Strength:"/>
			<Menu type="slider" min="0" max="100" value="50" change="bloom-strength"/>
			<Menu type="caption" name="Radius:"/>
			<Menu type="slider" min="0" max="100" value="0" change="bloom-radius"/>
		</Menu>
	</Menu>
</MenuBar>